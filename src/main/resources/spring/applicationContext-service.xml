    <!-- java代码通过注解方式获取properties文件中的值 例如    @Value("#{configProperties['siInfo.open.applyUsers']}")  -->
    <bean id="configProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations">
            <list>
                <value>classpath:*.properties</value>
            </list>
        </property>
    </bean>

    <bean id="attachService" class="com.advert.cms.core.service.impl.CmsAttachmentServiceFacadeImpl">
        <property name="attachRoot" value="${attachment.root}" />
        <property name="cmsAttachmentService" ref="cmsAttachmentService"/>
    </bean>


    <bean id="loginListener" class="com.advert.cms.web.common.security.LoginListener" />

</beans>